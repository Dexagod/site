\tikz{%
	\draw[loosely dotted,color=RoyalBlue,line width=1.5pt,yshift=0]
	(0,0) -- (0,\textheight);}%
\hfill\mbox{}
\end{staticcontents}

% right frame
\addtolength{\LeftMainSep}{1.5pt}
\addtolength{\LeftMainSep}{1\columnsep}
\newflowframe{0.7\textwidth}{\textheight}{\LeftMainSep}{0pt}[main01]


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% define macros (for convience)
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\Sep}{\vspace{1.5em}}
\newcommand{\SmallSep}{\vspace{0.5em}}

\newenvironment{AboutMe}
	{\ignorespaces\textbf{\color{RoyalBlue} About me}}
	{\Sep\ignorespacesafterend}

\newcommand{\CVSection}[1]
	{\Large\textbf{#1}\par
	\SmallSep\normalsize\normalfont}

\newcommand{\CVItem}[1]
	{\textbf{\color{RoyalBlue} #1}}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Begin document
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\begin{document}

% Left frame
%%%%%%%%%%%%%%%%%%%%
\begin{figure}
        \flushleft
	\includegraphics[width=0.8\columnwidth]{profile.png}
	\vspace{-7cm}
\end{figure}

\begin{flushleft}\small
	<%= item[:firstName] + " " + item[:lastName]%>\\
        <% item[:links].each do |link| %>
          \href{<%= link[:link] %>}{\faicon{<%= link[:icon] %>} <%= link[:text] %>} \\
        <% end %>
\end{flushleft}\normalsize
\framebreak


% Right frame
%%%%%%%%%%%%%%%%%%%%
\Huge\bfseries {\color{RoyalBlue} <%= item[:firstName] + " " + item[:lastName] %>} \\
\Large\bfseries {\color{Black} Curriculum Vitae} \\
\normalsize\normalfont

\CVSection{Schoolse Opleiding}
  <% item[:education].each do |education| %>
    \CVItem {<%= education[:school] %>, <%= education[:status] + (if education[:finished] then " (" + education[:finished].to_s + ")" else "" end)%>}\\
      <%= education[:direction] %>
    \SmallSep
  <% end %>
\Sep

\CVSection{Niet-Schoolse Opleiding}
	  <% item[:otherEducation].each do |otherEducation| %>
			\CVItem {<%= otherEducation[:type] %>} \hfill
				\scriptsize
					{<%= otherEducation[:organisation].tr(" ", "~") %>}\\
				\normalsize
				<%= otherEducation[:description] %>
			\SmallSep
	  <% end %>
\Sep

\CVSection{Talen}
  \begin{compactitem}[\color{RoyalBlue}$\circ$]
    <% item[:languages].each do |language| %>
      \item {<%= language[:language] %>}: {<%= language[:quality] %>}
    <% end %>
  \end{compactitem}
\Sep

% Skills
\CVSection{Softwarekennis}
  \CVItem{Programmeertalen}
    \begin{compactitem}[\color{RoyalBlue}$\circ$]
        <% item[:programmingLanguages].each do |programmingLanguage| %>
          \item {<%= programmingLanguage[:quality] %>}: {<%= programmingLanguage[:languages].sort * ", " %>}
        <% end %>
    \end{compactitem}
	\SmallSep

	\CVItem{Frameworks}
		\begin{compactitem}[\color{RoyalBlue}$\circ$]
			<% item[:frameworks].each do |framework| %>
				\item {<%= framework[:quality] %>}: {<%= framework[:frameworks].sort * ", " %>}
			<% end %>
		\end{compactitem}
	\Sep

\CVSection{Andere}
	\begin{compactitem}[\color{RoyalBlue}$\circ$]
		<% item[:other].each do |other| %>
			\item {<%= other[:year] + ": " + other[:type] %>}
		<% end %>
	\end{compactitem}

\end{document}
