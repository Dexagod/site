\CVSection{Schoolse Opleiding}
  <% item[:education].each do |education| %>
    \CVItem {<%= education[:school] %>, <%= education[:status] + (if education[:finished] then " (" + education[:finished].to_s + ")" else "" end)%>}\\
      <%= education[:direction] %>
    \SmallSep
  <% end %>
\Sep

\CVSection{Niet-Schoolse Opleiding}
	  <% item[:otherEducation].each do |otherEducation| %>
			\CVItem {<%= otherEducation[:type] %>} \hfill
				\scriptsize
					{<%= otherEducation[:organisation].tr(" ", "~") %>}\\
				\normalsize
				<%= otherEducation[:description] %>
			\SmallSep
	  <% end %>
\Sep

\CVSection{Talen}
  \begin{compactitem}[\color{RoyalBlue}$\circ$]
    <% item[:languages].each do |language| %>
      \item {<%= language[:language] %>}: {<%= language[:quality] %>}
    <% end %>
  \end{compactitem}
\Sep

% Skills
\CVSection{Softwarekennis}
  \CVItem{Programmeertalen}
    \begin{compactitem}[\color{RoyalBlue}$\circ$]
        <% item[:programmingLanguages].each do |programmingLanguage| %>
          \item {<%= programmingLanguage[:quality] %>}: {<%= programmingLanguage[:languages] * ", " %>}
        <% end %>
    \end{compactitem}
	\SmallSep

	\CVItem{Frameworks}
		\begin{compactitem}[\color{RoyalBlue}$\circ$]
			<% item[:frameworks].each do |framework| %>
				\item {<%= framework[:quality] %>}: {<%= framework[:frameworks] * ", " %>}
			<% end %>
		\end{compactitem}
	\Sep

\CVSection{Andere}
	\begin{compactitem}[\color{RoyalBlue}$\circ$]
		<% item[:other].each do |other| %>
			\item {<%= other[:year] + ": " + other[:type] %>}
		<% end %>
	\end{compactitem}

\end{document}
